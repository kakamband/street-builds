
<div class="w3-card-4 w3-center vertical-center" style="max-width: 500px; margin: auto; margin-top: 125px; background: white; padding-bottom: 20px; padding: 10px;">
    <div class="w3-container w3-center">
        <h1>Log In</h1>
        <%= flash[:error] %>
        <%= form_for @user, url: login_path do |f| %>
            <div class="w3-row-padding">
                <%= f.label :email, nil, class: "w3-left" %>
                <%= f.email_field :email, class: "w3-input w3-border" %><br>
                <%= f.label :password, nil, class: "w3-left" %>
                <%= f.password_field :password, class: "w3-input w3-border" %><br>
                <%= f.submit "Log In", class: "w3-input w3-border w3-red " %>
                
            <% end %>
            <p> or </p>
            <%= button_to "Log in with Google", '/auth/google_oauth2',  class: "w3-input w3-border w3-red "  %><br><br>

        </div>
    </div>
    
</div>


