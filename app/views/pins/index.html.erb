<h1>All Pins</h1>
<% if @board %>
    <%= @board.title %>
<% end %>


<div class="w3-row-padding">
  <% @pins.each do |p| %>  <div class="w3-third w3-margin-bottom">
    <div class="w3-card-4">
      <div class="w3-container">
       <h3 class="w3-center"><%= link_to "#{p.car.owner.first_name}", user_path(p.car.owner)%>'s <%= link_to "#{p.car.year} #{p.car.make} #{p.car.model}", car_path(p.car)%></h3>
     <%= image_tag p.car.images.first, style: "width: 100%", class: "w3-margin-bottom" if p.car.images.attached? %>
        <h4 class="w3-center"><%= p.note %></h4>
        </div>
      </div>
    </div>
<% end %>
</div>