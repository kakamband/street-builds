<%= link_to "Share Your Build", new_project_car_path %>

<% @project_cars.each do |c| %>
    <h2><%= link_to "#{c.owner.username}", user_path(c.owner)%> - <%= link_to "#{c.year} #{c.make} #{c.model}", project_car_path(c)%></h2>
    <p>Engine: <%= c.engine %></p>
    <p>Drivetrain: <%= c.drivetrain %></p>
    <p>Suspension: <%= c.suspension %></p>
    <p>Wheels And Tires: <%= c.wheels_and_tires %></p>
    <p><%= "#{c.admirers.count} Like(s)" if c.admirers %></p>
    <hr>
<% end %>